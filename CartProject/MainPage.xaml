<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:CartProject.MarkupExtensions"
             x:Class="CartProject.MainPage">

    <StackLayout Margin ="10" BackgroundColor="DarkGray" Orientation="Horizontal">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Text="검색" Clicked="OnSearchButtonClicked" />
            <Button Grid.Row="1" Text="계산" Clicked="OnCalcButtonClicked" />
            <Button Grid.Row="2" Text="생성" Clicked="OnAdsAddedClicked" />
        </Grid>

        <ListView x:Name="listView" Margin="0,10,10,10" BackgroundColor="WhiteSmoke"  >
            <ListView.ItemTemplate>
                <DataTemplate >
                    <ImageCell Height="100" ImageSource="{Binding Text}" Text="{Binding Text}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
